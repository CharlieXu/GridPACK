<?xml version="1.0" encoding="utf-8"?>
<Configuration>
  <Powerflow>
    <networkConfiguration> pti08.raw </networkConfiguration>
    <networkUnpartitionedGraph>pti08_network.dot</networkUnpartitionedGraph>
    <networkPartitionedGraph>pti08x_partitioned_network.dot</networkPartitionedGraph>
    <!--
    <LinearSolver>
      <PETScPrefix>nrs</PETScPrefix>
      <PETScOptions>
        -ksp_type preonly
        -pc_type lu
        -ksp_monitor
        -ksp_max_it 1
        -ksp_view
      </PETScOptions>
    </LinearSolver> 
    -->
    <LinearSolver>
        <PETScPrefix>nrs</PETScPrefix>
        <PETScOptions>
          -ksp_type bicg
          -pc_type bjacobi
          -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly 
          -ksp_atol 1.0e-15
          -ksp_rtol 1.0e-10
          -ksp_monitor
          -ksp_max_it 10000
          -ksp_view
        </PETScOptions>
    </LinearSolver>
    <!-- 
         If UseNewton is true a NewtonRaphsonSolver is
         used. Otherwise, a PETSc-based NonlinearSolver is
         used. Configuration parameters for both are included here. 
    -->
    <UseNewton>false</UseNewton>
    <NewtonRaphsonSolver>
      <Tolerance>1.0E-05</Tolerance>
      <MaxIterations>50</MaxIterations>
      <LinearSolver>
        <PETScOptions>
          -ksp_type bicg
          -pc_type bjacobi
          -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly 
          -ksp_atol 1.0e-15
          -ksp_rtol 1.0e-10
          -ksp_monitor
          -ksp_max_it 10000
          -ksp_view
        </PETScOptions>
      </LinearSolver>
    </NewtonRaphsonSolver>
    <NonlinearSolver> 
      <PETScOptions>
        -snes_view
        -snes_monitor
        -snes_linesearch_monitor 
        -snes_linesearch_type basic
        -snes_stol 1.0e-05
        -snes_max_it 50
        -ksp_type bicg
        -pc_type bjacobi
        -sub_pc_type ilu -sub_pc_factor_levels 5 -sub_ksp_type preonly 
        -ksp_atol 1.0e-15
        -ksp_rtol 1.0e-10
        -ksp_monitor
        -ksp_max_it 10000
        -ksp_view
      </PETScOptions>
    </NonlinearSolver>
  </Powerflow>
</Configuration>
