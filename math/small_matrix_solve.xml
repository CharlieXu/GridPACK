<SmallMatrixSolve>
  <LinearMatrixSolver>
    <!-- 
         These options are used if SuperLU was built into PETSc 
    -->
    <Ordering>nd</Ordering>
    <Package>superlu_dist</Package>
    <Iterations>1</Iterations>
    <Fill>5</Fill>

    <!-- 
         These options are use for the LinearSolver if SuperLU is not
         available 
    -->
    <PETScOptions>
        -ksp_atol 1.0e-18
        -ksp_rtol 1.0e-10
        -ksp_monitor
        -ksp_max_it 200
        -ksp_view
    </PETScOptions>
  </LinearMatrixSolver>>
</SmallMatrixSolve>
