<Configuration>
  <Powerflow>
    <networkConfiguration> 118.raw </networkConfiguration>
    <networkUnpartitionedGraph>118_network.dot</networkUnpartitionedGraph>
    <networkPartitionedGraph>118_partitioned_network.dot</networkPartitionedGraph>
    <LinearSolver>
      <PETScPrefix>nrs</PETScPrefix>
      <PETScOptions>
        -ksp_atol 1.0e-08
        -ksp_rtol 1.0e-12
        -ksp_monitor
        -ksp_max_it 50
        -ksp_view
      </PETScOptions>
    </LinearSolver>
    <!-- This is how to specific direct solution via LU
         decomposition. It only works if SuperLU_Dist is built into
         PETSc. -->
    <!-- 
    <LinearSolver>
      <PETScOptions>
        -ksp_view
        -ksp_type richardson
        -pc_type lu
        -pc_factor_mat_solver_package superlu_dist
        -ksp_max_it 1
      </PETScOptions>
    </LinearSolver>
    -->
    <!-- 
         If UseNewton is true a NewtonRaphsonSolver is
         used. Otherwise, a PETSc-based NonlinearSolver is
         used. Configuration parameters for both are included here. 
    -->
    <UseNewton>false</UseNewton>
    <NewtonRaphsonSolver>
      <Tolerance>1.0E-05</Tolerance>
      <MaxIterations>50</MaxIterations>
      <LinearSolver>
        <PETScOptions>
          -ksp_atol 1.0e-08
          -ksp_rtol 1.0e-12
          -ksp_monitor
          -ksp_max_it 50
          -ksp_view
        </PETScOptions>
      </LinearSolver>
    </NewtonRaphsonSolver>
    <NonlinearSolver> 
      <PETScOptions>
        -snes_view
        -snes_monitor
        -snes_linesearch_monitor 
        -snes_linesearch_type basic
        -snes_atol 1.0e-10
        -snes_rtol 1.0e-10
        -snes_stol 1.0e-05
        -snes_max_it 50
        -ksp_atol 1.0e-08
        -ksp_rtol 1.0e-12
        -ksp_monitor
        -ksp_view
      </PETScOptions>
    </NonlinearSolver>
  </Powerflow>
</Configuration>
